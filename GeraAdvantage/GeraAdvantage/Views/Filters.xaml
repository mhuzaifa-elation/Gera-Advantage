<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="GeraAdvantage.Views.Filters"
    Style="{StaticResource ContentPageStyle}">
    <NavigationPage.TitleView>
        <StackLayout
            Orientation="Horizontal"
            VerticalOptions="CenterAndExpand"
            Margin="0,0,10,0">
            <Label
                Text="Filters"
                Style="{StaticResource PageTitle}"/>
            <Button
                Text="Clear All"
                Style="{StaticResource BrWTitleBtn}" />
            <Button
                Text="Apply"
                Style="{StaticResource BlWTitleBtn}" />
        </StackLayout>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <StackLayout>
            <Grid
                ColumnDefinitions="40*,60*"
                ColumnSpacing="0"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand">
                <ListView
                    Grid.Column="0"
                    x:Name="FilterTypeListView"
                    SelectionMode="None"
                    Style="{StaticResource ListviewStyle}"
                    ItemTapped="FilterTypeListView_ItemTapped">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout
                                    Padding="15,15,5,5"
                                    Orientation="Horizontal"
                                    MinimumHeightRequest="50">
                                    <StackLayout
                                        Padding="0,0,0,0"
                                        HorizontalOptions="CenterAndExpand"
                                        VerticalOptions="CenterAndExpand">
                                        <Label
                                            Text="{Binding Type}"
                                            Style="{StaticResource FilterLabel}">
                                        </Label>
                                    </StackLayout>

                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <ListView
                    Grid.Column="1"
                    x:Name="CheckBoxListView"
                    Style="{StaticResource ListviewStyle}"
                    BackgroundColor="White">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout
                                    Padding="15,15,5,5"
                                    Orientation="Horizontal"
                                    MinimumHeightRequest="50">
                                    <StackLayout
                                        Padding="0,0,0,0"
                                        HorizontalOptions="StartAndExpand"
                                        VerticalOptions="CenterAndExpand"
                                        Orientation="Horizontal">
                                        <CheckBox
                                            HorizontalOptions="Start"
                                            VerticalOptions="CenterAndExpand"
                                            Color="Gray" />
                                        <Label
                                            Text="{Binding Title}"
                                            Padding="5,3,5,3"
                                            Style="{StaticResource FilterLabel}"
                                            FontSize="Small"
                                            FontAttributes="None">
                                        </Label>
                                    </StackLayout>

                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>