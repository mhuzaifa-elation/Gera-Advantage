<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="GeraAdvantage.Views.NonConformity"
    Title="Non-Conformity"
    BackgroundColor="White">
    <ContentPage.Padding>
        <OnPlatform
            x:TypeArguments="Thickness">
            <OnPlatform.Platforms>
                <On
                    Platform="iOS"
                    Value="0, 20, 0, 20" />
            </OnPlatform.Platforms>
        </OnPlatform>
    </ContentPage.Padding>
    <ContentPage.Content>
        <StackLayout
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand">
            <ScrollView>
                <StackLayout
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="StartAndExpand"
                    Margin="10,10,10,0">
                    <StackLayout
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start"
                        Orientation="Horizontal">
                        <CheckBox
                            Style="{StaticResource Chkbox}" />
                        <Label
                            Text="Potential NC"
                            Style="{StaticResource ConformityChkBXLabel}" />
                    </StackLayout>
                    <StackLayout
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start">
                        <Label
                            Text="Select Building"
                            Style="{StaticResource ConformityLabel}" />
                        <Grid>
                            <Button
                                HorizontalOptions="FillAndExpand"
                                BackgroundColor="Transparent"
                                Clicked="Button_Clicked" />
                            <Entry
                                TextColor="Black"
                                IsReadOnly="True" />
                            <Image
                                Source="down.png"
                                Style="{StaticResource downImgStyle}" />
                        </Grid>
                    </StackLayout>
                    <StackLayout
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start">
                        <Label
                            Text="Select Floor"
                            Style="{StaticResource ConformityLabel}" />
                        <Grid>
                            <Button
                                HorizontalOptions="FillAndExpand"
                                BackgroundColor="Transparent"
                                Clicked="Button_Clicked" />
                            <Entry
                                TextColor="Black"
                                IsReadOnly="True" />
                            <Image
                                Source="down.png"
                                Style="{StaticResource downImgStyle}" />
                        </Grid>
                    </StackLayout>
                    <StackLayout
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start">
                        <Label
                            Text="Select Flat Type"
                            Style="{StaticResource ConformityLabel}" />
                        <Grid>
                            <Button
                                HorizontalOptions="FillAndExpand"
                                BackgroundColor="Transparent"
                                Clicked="Button_Clicked" />
                            <Entry
                                TextColor="Black"
                                IsReadOnly="True" />
                            <Image
                                Source="down.png"
                                Style="{StaticResource downImgStyle}" />
                        </Grid>
                    </StackLayout>
                    <StackLayout
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start">
                        <Label
                            Text="Select Flat Number"
                            Style="{StaticResource ConformityLabel}" />
                        <Grid>
                            <Button
                                HorizontalOptions="FillAndExpand"
                                BackgroundColor="Transparent"
                                Clicked="Button_Clicked" />
                            <Entry
                                TextColor="Black"
                                IsReadOnly="True" />
                            <Image
                                Source="down.png"
                                Style="{StaticResource downImgStyle}" />
                        </Grid>
                    </StackLayout>
                    <StackLayout
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start">
                        <Label
                            Text="Select Room"
                            Style="{StaticResource ConformityLabel}" />
                        <Grid>
                            <Button
                                HorizontalOptions="FillAndExpand"
                                BackgroundColor="Transparent"
                                Clicked="Button_Clicked" />
                            <Entry
                                TextColor="Black"
                                IsReadOnly="True" />
                            <Image
                                Source="down.png"
                                Style="{StaticResource downImgStyle}" />
                        </Grid>
                    </StackLayout>
                    <StackLayout
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start">
                        <Label
                            Text="Select Category"
                            Style="{StaticResource ConformityLabel}" />
                        <Grid>
                            <Button
                                HorizontalOptions="FillAndExpand"
                                BackgroundColor="Transparent"
                                Clicked="Button_Clicked" />
                            <Entry
                                TextColor="Black"
                                IsReadOnly="True" />
                            <Image
                                Source="down.png"
                                Style="{StaticResource downImgStyle}" />
                        </Grid>
                    </StackLayout>
                    <StackLayout
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start">
                        <Label
                            Text="Select Sub-Category"
                            Style="{StaticResource ConformityLabel}" />
                        <Grid>
                            <Button
                                HorizontalOptions="FillAndExpand"
                                BackgroundColor="Transparent"
                                Clicked="Button_Clicked" />
                            <Entry
                                TextColor="Black"
                                IsReadOnly="True" />
                            <Image
                                Source="down.png"
                                Style="{StaticResource downImgStyle}" />
                        </Grid>
                    </StackLayout>
                    <StackLayout
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start">
                        <Label
                            Text="Select Root Cause"
                            Style="{StaticResource ConformityLabel}" />
                        <Grid>

                            <Button
                                HorizontalOptions="FillAndExpand"
                                BackgroundColor="Transparent"
                                Clicked="Button_Clicked" />
                            <Entry
                                TextColor="Black"
                                IsReadOnly="True" />
                            <Image
                                Source="down.png"
                                Style="{StaticResource downImgStyle}" />
                        </Grid>
                    </StackLayout>
                    <StackLayout
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start">
                        <Label
                            Text="Proposed Severity"
                            Style="{StaticResource ConformityLabel}" />
                        <Grid>

                            <Button
                                HorizontalOptions="FillAndExpand"
                                BackgroundColor="Transparent"
                                Clicked="Button_Clicked" />
                            <Entry
                                TextColor="Black"
                                IsReadOnly="True" />
                            <Image
                                Source="down.png"
                                Style="{StaticResource downImgStyle}" />
                        </Grid>
                    </StackLayout>
                    <StackLayout
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start">
                        <Label
                            Text="Select Severity"
                            Style="{StaticResource ConformityLabel}" />
                        <Grid>

                            <Button
                                HorizontalOptions="FillAndExpand"
                                BackgroundColor="Transparent"
                                Clicked="Button_Clicked" />
                            <Entry
                                TextColor="Black"
                                IsReadOnly="True" />
                            <Image
                                Source="down.png"
                                Style="{StaticResource downImgStyle}" />
                        </Grid>
                    </StackLayout>
                    <StackLayout
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start">
                        <Label
                            Text="Assign Contractor"
                            Style="{StaticResource ConformityLabel}" />
                        <Grid>

                            <Button
                                HorizontalOptions="FillAndExpand"
                                BackgroundColor="Transparent"
                                Clicked="Button_Clicked" />
                            <Entry
                                TextColor="Black"
                                IsReadOnly="True" />
                            <Image
                                Source="down.png"
                                Style="{StaticResource downImgStyle}" />
                        </Grid>
                    </StackLayout>
                    <StackLayout
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start">
                        <Label
                            Text="Select Responsible Engineer"
                            Style="{StaticResource ConformityLabel}" />
                        <Grid>

                            <Button
                                HorizontalOptions="FillAndExpand"
                                BackgroundColor="Transparent"
                                Clicked="Button_Clicked" />
                            <Entry
                                TextColor="Black"
                                IsReadOnly="True" />
                            <Image
                                Source="down.png"
                                Style="{StaticResource downImgStyle}" />
                        </Grid>
                    </StackLayout>
                    <StackLayout
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start">
                        <Label
                            Text="Contractor Company Name"
                            Style="{StaticResource ConformityLabel}" />
                        <Label
                            Text="Gera"
                            FontSize="Default"
                            TextColor="Black" />
                    </StackLayout>
                    <StackLayout
                        Margin="0,10,0,0"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start">
                        <Label
                            Text="NC Comment"
                            Style="{StaticResource ConformityLabel}" />
                        <Entry
                            HorizontalOptions="FillAndExpand"
                            Placeholder="Add comment if any"
                            Style="{StaticResource ConformityEntry}" />

                    </StackLayout>
                    <StackLayout
                        Margin="0,10,0,0"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start">
                        <Label
                            Text="Corrective Action"
                            Style="{StaticResource ConformityLabel}" />

                        <Entry
                            HorizontalOptions="FillAndExpand"
                        Placeholder="Add Corrective Action if any"
                            Style="{StaticResource ConformityEntry}" />
                    </StackLayout>
                    <StackLayout
                        Margin="0,10,0,0"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start">
                        <Label
                            Text="Preventive Action"
                            Style="{StaticResource ConformityLabel}" />

                        <Entry
                            HorizontalOptions="FillAndExpand"
                            Placeholder="Add Preventice Action if any" 
                        Style="{StaticResource ConformityEntry}" />

                    </StackLayout>
                </StackLayout>

            </ScrollView>
            <StackLayout
                HorizontalOptions="FillAndExpand"
                Orientation="Horizontal"
                VerticalOptions="End"
                Margin="10"
                Spacing="10">
                <Button
                    Text="Add Photo"
                    HorizontalOptions="FillAndExpand" />
                <Button
                    HorizontalOptions="FillAndExpand"
                    Text="Save" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>