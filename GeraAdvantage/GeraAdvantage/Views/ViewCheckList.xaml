<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="GeraAdvantage.Views.ViewCheckList"
    Title="Create Checklist"
    BackgroundColor="White">
    <NavigationPage.TitleView>
        <StackLayout
            Orientation="Horizontal"
            VerticalOptions="CenterAndExpand"
            Margin="0,0,10,0">
            <Label
                Text="Create Checklist"
                FontSize="20"
                TextColor="White"
                VerticalOptions="CenterAndExpand"
                VerticalTextAlignment="Center"
                HorizontalOptions="StartAndExpand" />
            <Button
                x:Name="LCount"
                TextColor="White"
                BackgroundColor="Transparent"
                HorizontalOptions="End"
                WidthRequest="40"
                CornerRadius="20"
                BorderColor="White"
                BorderWidth="2" />
        </StackLayout>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <ScrollView>
            <StackLayout
                Margin="10"
                Spacing="0">
                
                <Label
                    FontSize="Medium"
                    Text="Project Title" />
                <Label
                    FontSize="Small"
                    Text="B-Bldg | Ground | BG02" />
                <Label
                    FontSize="Small"
                    TextColor="DodgerBlue"
                    Text="A/C Installation" />
                <Label
                    FontSize="Small"
                    Text="Not Applicable |" />
                <Grid
                    ColumnDefinitions="*,*,*"
                    HeightRequest="100">
                    <Grid
                        Grid.Column="0">

                        <ImageButton
                            Source="barrow.png"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="FillAndExpand"
                            BackgroundColor="Transparent" />
                        <Label
                            Text="Pre"
                            TextColor="White"
                            FontSize="Medium"
                            HorizontalTextAlignment="Center"
                            VerticalTextAlignment="Center"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="FillAndExpand" />
                    </Grid>
                    <Grid
                        Grid.Column="1">

                        <ImageButton
                            Source="garrow.png"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="FillAndExpand"
                            BackgroundColor="Transparent" />
                        <Label
                            Text="In Process"
                            TextColor="Black"
                            FontSize="Medium"
                            HorizontalTextAlignment="Center"
                            VerticalTextAlignment="Center"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="FillAndExpand" />
                    </Grid>
                    <Grid
                        Grid.Column="2">

                        <ImageButton
                            Source="garrow.png"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="FillAndExpand"
                            BackgroundColor="Transparent" />
                        <Label
                            Text="Post"
                            TextColor="Black"
                            FontSize="Medium"
                            HorizontalTextAlignment="Center"
                            VerticalTextAlignment="Center"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="FillAndExpand" />
                    </Grid>
                </Grid>
                <ListView
                    x:Name="listView"
                    HasUnevenRows="true"
                    SeparatorColor="DarkGray"
                    SelectionMode="None"
                    ItemTapped="listView_ItemTapped"
                    ItemsSource="{Binding _opsList}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout
                                    Padding="15,15,5,5"
                                    Orientation="Horizontal"
                                    HeightRequest="200"
                                    VerticalOptions="FillAndExpand">
                                    <StackLayout
                                        HorizontalOptions="FillAndExpand"
                                        VerticalOptions="FillAndExpand"
                                        Orientation="Vertical">
                                        <Label
                                            Text="{Binding Title}"
                                            FontSize="Medium"
                                            VerticalOptions="Start"
                                            TextColor="Black" />
                                        <Grid
                                            ColumnDefinitions="*,*,*,*"
                                            HeightRequest="60"
                                            VerticalOptions="CenterAndExpand"
                                            HorizontalOptions="FillAndExpand"
                                            IsVisible="{Binding isthree}">
                                            <Button
                                                x:Name="btnYes"
                                                Grid.Column="0"
                                                Text="Yes"
                                                FontSize="13"
                                                TextColor="White"
                                                FontAttributes="Bold"
                                                BackgroundColor="Green"
                                                CornerRadius="30"
                                                WidthRequest="60"
                                                HorizontalOptions="Start"
                                                HeightRequest="60"
                                                BorderWidth="5"
                                                BorderColor="Transparent"
                                                Clicked="Button_Clicked" />
                                            <Button
                                                x:Name="btnNo"
                                                Grid.Column="1"
                                                Text="No"
                                                FontSize="13"
                                                TextColor="White"
                                                FontAttributes="Bold"
                                                BackgroundColor="Red"
                                                CornerRadius="30"
                                                WidthRequest="60"
                                                HorizontalOptions="CenterAndExpand"
                                                HeightRequest="60"
                                                BorderWidth="5"
                                                BorderColor="Transparent"
                                                Clicked="Button_Clicked" />
                                            <Button
                                                x:Name="btnNA1"
                                                Grid.Column="2"
                                                Text="NA"
                                                FontSize="13"
                                                TextColor="White"
                                                FontAttributes="Bold"
                                                BackgroundColor="Purple"
                                                CornerRadius="30"
                                                WidthRequest="60"
                                                HorizontalOptions="End"
                                                HeightRequest="60"
                                                BorderWidth="5"
                                                BorderColor="Transparent"
                                                Clicked="Button_Clicked" />
                                        </Grid>
                                        <Grid
                                            ColumnDefinitions="*,*,*,*"
                                            HeightRequest="60"
                                            VerticalOptions="CenterAndExpand"
                                            HorizontalOptions="FillAndExpand"
                                            IsVisible="{Binding isfour}">
                                            <Button
                                                x:Name="btnA"
                                                Grid.Column="0"
                                                Text="A"
                                                FontSize="13"
                                                TextColor="White"
                                                FontAttributes="Bold"
                                                BackgroundColor="Green"
                                                CornerRadius="30"
                                                WidthRequest="60"
                                                HorizontalOptions="Start"
                                                HeightRequest="60"
                                                BorderWidth="5"
                                                BorderColor="Transparent"
                                                Clicked="Button_Clicked" />
                                            <Button
                                                x:Name="btnAWC"
                                                Grid.Column="1"
                                                Text="AWC"
                                                FontSize="13"
                                                TextColor="White"
                                                FontAttributes="Bold"
                                                BackgroundColor="Orange"
                                                CornerRadius="30"
                                                WidthRequest="60"
                                                HorizontalOptions="CenterAndExpand"
                                                HeightRequest="60"
                                                BorderWidth="5"
                                                BorderColor="Transparent"
                                                Clicked="Button_Clicked" />
                                            <Button
                                                x:Name="btnR"
                                                Grid.Column="2"
                                                Text="R"
                                                FontSize="13"
                                                TextColor="White"
                                                FontAttributes="Bold"
                                                BackgroundColor="Red"
                                                CornerRadius="30"
                                                WidthRequest="60"
                                                HorizontalOptions="End"
                                                HeightRequest="60"
                                                BorderWidth="5"
                                                BorderColor="Transparent"
                                                Clicked="Button_Clicked" />
                                            <Button
                                                x:Name="btnNA2"
                                                Grid.Column="3"
                                                Text="NA"
                                                FontSize="13"
                                                TextColor="White"
                                                FontAttributes="Bold"
                                                BackgroundColor="Purple"
                                                CornerRadius="30"
                                                WidthRequest="60"
                                                HorizontalOptions="End"
                                                HeightRequest="60"
                                                BorderWidth="5"
                                                BorderColor="Transparent"
                                                Clicked="Button_Clicked">
                                            </Button>
                                        </Grid>
                                        <StackLayout
                                            Orientation="Vertical"
                                            IsVisible="{Binding SEComment}">
                                            <Label
                                                Text="SE Comment"
                                                TextColor="Black"/>
                                            <Entry TextColor="Black"/>
                                        </StackLayout>
                                        <StackLayout
                                            Orientation="Vertical"
                                            IsVisible="{Binding ConverttoNC}">
                                            <Button
                                                Text="ConverttoNC" />
                                        </StackLayout>
                                    </StackLayout>
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Button
                    Text="Save And Next"
                    HorizontalOptions="End"
                    WidthRequest="180"
                    CornerRadius="20"
                    Margin="10"
                    Clicked="BtnOK_Clicked"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>